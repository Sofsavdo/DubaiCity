# Copy this file to .env and fill in your values
# This project is ready for Replit Agent enhancement!

# Bot Configuration (Already working - don't change)
# These settings control the Telegram bot's behavior and connection.
TELEGRAM_BOT_TOKEN=your_bot_token_here
BOT_USERNAME=DubaiCITY_robot
CHANNEL_URL=https://t.me/DubaiCity_live

# ==================== DATABASE ====================
# PostgreSQL database URL (required)
DATABASE_URL=postgresql://username:password@host:5432/database

# ==================== WEB APP URLS ====================
# Define the URLs for your web application.
WEB_APP_URL=https://your-replit-domain.replit.app
WEBAPP_URL=https://your-replit-domain.replit.app

# ==================== ADMIN PANEL ====================
# Credentials for accessing the admin panel.
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# ==================== DEVELOPMENT ====================
# Settings for the development environment.
NODE_ENV=development
PORT=5000
VITE_API_URL=https://your-replit-domain.replit.app

# ==================== SECURITY ====================
# Secret key used for JWT (JSON Web Token) authentication.  Important: Change this to a strong, unique value!
JWT_SECRET=your_super_secret_jwt_key_here

# ==================== PAYMENT (OPTIONAL) ====================
# Your Ton wallet address for receiving payments (optional).
TON_WALLET_ADDRESS=your_ton_wallet_address

# ==================== GAME SETTINGS ====================
# Parameters that define the game mechanics.
COINS_PER_TAP=1
MAX_ENERGY=1000
ENERGY_REFILL_RATE=1
REFERRAL_BONUS=5000

# ==================== DEBUGGING ====================
# Enable or disable debugging mode.
DEBUG=false
VITE_ENABLE_PREVIEW_MODE=true